<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txv_sure_cheat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/are_you_sure_you_want_do_cheat"
        app:layout_constraintBottom_toTopOf="@id/texv_show_answer"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/texv_show_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txv_sure_cheat"
        tools:text="true"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_show_Answer"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/texv_show_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="@string/show_answer"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>